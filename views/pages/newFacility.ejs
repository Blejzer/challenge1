<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <h1>New Facility</h1>
    </div>
    <div>
        <% if (typeof ct == 'object' && ct) { %>
            <form action="/facility/new1" method="get" class="form-signin">
                <div class="form-group">
                    <label for="name">Please select country</label>
                    <select name="country" class="form-control">
                        <% for(var i = 0; i < ct.length; i++) { %>
                            <option value='<%= ct[i].country_pk %>'><%= ct[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        <% } %>

<% if (typeof ft == 'object' && ft && typeof city == 'object' && city) { %>
            <form action="/facility/new1" method="post" class="form-signin">
                <div class="form-group">
                    <label for="name">Facility Type</label>
                    <select name="facilitytype" class="form-control">
                        <% for(var i = 0; i < ft.length; i++) { %>
                            <option value='<%= ft[i].ft_pk %>'><%= ft[i].title %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Facility Name</label>
                    <input type="text" class="form-control" name="name"  />
                </div>
                <div class="form-group">
                    <label for="address">Facility Address</label>
                    <input type="text" class="form-control" name="address"  />
                </div>

                <div class="form-group">
                    <label for="name">City</label>
                    <select name="city" class="form-control">
                        <% for(var i = 0; i < city.length; i++) { %>
                            <option value='<%= city[i].city_pk %>'><%= city[i].city %></option>
                        <% } %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        <% } %>
    </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

</body>
</html>